<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FoodActivity"
    android:animateLayoutChanges="true"
    android:animationCache="true">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorRed"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        tools:viewBindingIgnore="true">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="@dimen/_34sdp"
            android:layout_height="@dimen/_34sdp"
            android:padding="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_keyboard_backspace_white_24dp"
            android:background="@drawable/selector_back"
            tools:ignore="ContentDescription,MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_34sdp"
            android:layout_margin="@dimen/_5sdp">

            <EditText
                android:id="@+id/searchEt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="3dp"
                android:background="@drawable/border_black"
                android:drawableEnd="@drawable/ic_search_red_24dp"
                android:gravity="center_vertical"
                android:hint="\tSearch Here"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:singleLine="true"
                app:iconifiedByDefault="false"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/subCategoryRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:background="@color/colorWhite"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/design_sub_category_item"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/subCategoryRecycler"
        android:layout_above="@id/viewCartTv"
        android:paddingTop="5dp"
        android:paddingHorizontal="7dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/design_foods_item"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/emptyLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_111sdp"
            android:layout_height="@dimen/_111sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_remove_shopping_cart_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_foods_available"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewCartTv"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/selector_view_cart"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10sdp"
        android:focusable="true">

        <TextView
            android:id="@+id/countTv"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:text="0"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="#000" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="4.8"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:paddingEnd="@dimen/_39sdp"
            android:text="@string/view_your_cart"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:paddingBottom="1dp"
                android:gravity="center"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/totalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:maxLines="1"
                android:text="0.0"
                android:gravity="center"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>