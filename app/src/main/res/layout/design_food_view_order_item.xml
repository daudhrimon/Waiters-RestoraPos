<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_9sdp"
        android:paddingVertical="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/edit_text_red_background"
                android:scaleType="centerInside"
                android:src="@drawable/ic_baseline_brightness_1_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.1"
            android:orientation="vertical">


            <TextView
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crispy Chicken San"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_11sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/totalPriceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sizeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Size:"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_9sdp"/>

            <TextView
                android:id="@+id/addOnName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:textColor="@color/color_black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="3dp">

            <TextView
                android:id="@+id/statusTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_black_background"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Pending"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:id="@+id/quantityTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/_9sdp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>