<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/varientLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Variants"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/closeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/selector_search_cross"
                    android:clickable="true"
                    android:drawableEnd="@drawable/ic_close"
                    android:focusable="true"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="6dp"
                    android:textSize="21sp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ash_border_background"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Item information" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BCBCBC" />

                <Spinner
                    android:id="@+id/variantSpinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.2"
                    android:prompt="@string/app_name"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BCBCBC" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="1dp"
                    android:weightSum="3">

                    <ImageView
                        android:id="@+id/minusBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_minus" />

                    <EditText
                        android:id="@+id/quantityEt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:padding="5dp"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="#000"
                        tools:ignore="TouchTargetSizeCheck" />

                    <ImageView
                        android:id="@+id/plusBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="0.8"
                        android:src="@drawable/ic_add" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#BCBCBC" />

                <TextView
                    android:id="@+id/totalPriceTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Price" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addonsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/varientLayout"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="12dp"
                android:text="Add Ons"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AddOns Name"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="AddOns Price"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Qty"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Price"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialogAddonsRv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_220sdp"
            android:layout_below="@+id/addonsHeader"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialogAddonsRv"
            android:layout_marginTop="9dp"
            android:gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addMultipleBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_34sdp"
                android:layout_gravity="right"
                android:layout_marginEnd="11dp"
                android:background="@drawable/border_black"
                android:backgroundTint="@color/colorRed"
                android:foreground="?attr/selectableItemBackground"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:text="Add Multiple Variant"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/addToCartBtn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_34sdp"
                android:layout_gravity="right"
                android:background="@drawable/border_black"
                android:backgroundTint="@color/colorRed"
                android:foreground="?attr/selectableItemBackground"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:text="Add To Cart"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>