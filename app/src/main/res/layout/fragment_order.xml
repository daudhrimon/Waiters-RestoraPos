<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.OrderFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/orderSwipe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <FrameLayout
            android:id="@+id/orderContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36sdp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pendingId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_dark"
            android:gravity="center"
            android:text="Pending"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_11sdp"  />

        <TextView
            android:id="@+id/processingId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_dark"
            android:gravity="center"
            android:text="Processing"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/readyId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_dark"
            android:gravity="center"
            android:text="Ready"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/cancelId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_dark"
            android:gravity="center"
            android:text="Cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_11sdp"  />

    </LinearLayout>

</LinearLayout>